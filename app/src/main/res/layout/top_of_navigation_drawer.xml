<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/newbookscollection"
        android:paddingTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/wrapperRoundImageCard"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#77ffffff"
            app:cardCornerRadius="250dp"
            android:layout_marginVertical="10dp"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#0DFFFFFF"
                app:cardCornerRadius="250dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2AFFFFFF"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/accountImage"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_account_for_profile"

                        />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/signin_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrapperRoundImageCard"
            android:padding="5dp"
            android:paddingBottom="0dp"
            android:text="@string/sign_in"
            android:textAlignment="center"
            android:textColor="@color/whitebutnotwhite"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>