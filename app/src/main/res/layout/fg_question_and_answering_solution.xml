<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_question_holder"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/scroll_paper_texture"
            android:elegantTextHeight="true"
            android:elevation="10dp"
            android:fontFamily="serif"
            android:lineHeight="16dp"
            android:lineSpacingMultiplier="2.2"

            android:paddingVertical="35dp"
            android:paddingHorizontal="45dp"
            android:justificationMode="inter_word"
            android:scrollbars="horizontal"
            android:text="@string/sapleQuestion"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"

            />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollIndicators="start"
                android:scrollbarSize="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                       >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:minWidth="25dp"
                            android:text="ሀ."
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/FirstOption_from_choice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical"
                            android:scrollHorizontally="true"
                            android:inputType="textMultiLine"
                            android:justificationMode="inter_word"
                            android:padding="20dp"
                            android:background="@drawable/bg_for_option_background"
                            android:text="helledddddddddddddddddhelledddddddddhelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddpddddddddddddddddddddddddddddpvvvvvvvddddddddddddddddddddp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:minWidth="25dp"
                            android:text="ለ."
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/Option_B_from_choice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical"
                            android:scrollHorizontally="true"
                            android:inputType="textMultiLine"
                            android:justificationMode="inter_word"
                            android:padding="20dp"
                            android:background="@drawable/bg_for_option_background"
                            android:text="helledddddddddddddddddhelledddddddddhelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddpddddddddddddddddddddddddddddpvvvvvvvddddddddddddddddddddp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:minWidth="25dp"
                            android:text="ሐ."
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/Option_c_from_choice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical"
                            android:scrollHorizontally="true"
                            android:inputType="textMultiLine"
                            android:justificationMode="inter_word"
                            android:padding="20dp"
                            android:background="@drawable/bg_for_option_background"
                            android:text="helledddddddddddddddddhelledddddddddhelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddpddddddddddddddddddddddddddddpvvvvvvvddddddddddddddddddddp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:minWidth="25dp"
                            android:text="መ."
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/LastOption_from_choice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical"
                            android:scrollHorizontally="true"
                            android:inputType="textMultiLine"
                            android:justificationMode="inter_word"
                            android:padding="20dp"
                            android:background="@drawable/bg_for_option_background"
                            android:text="helledddddddddddddddddhelledddddddddhelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddphelledddddddddddddddddddddddddddddddddddddpddddddddddddddddddddddddddddpvvvvvvvddddddddddddddddddddp" />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#4DE65100"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="5dp"
                android:tooltipText="if You Stuck on this question u could always check for help in this section"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#20E65100"
                    android:src="@drawable/ic_information30" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="5dp"
                android:tooltipText="Solution For The Question"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#20E65100"
                    android:src="@drawable/ic_solution_buld_light48" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>