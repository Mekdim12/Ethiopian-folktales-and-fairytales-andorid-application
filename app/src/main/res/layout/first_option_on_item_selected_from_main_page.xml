<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Stars"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#0D4FA381"
                    app:cardCornerRadius="50dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#2AFFFFFF"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/StarredItems"
                            android:layout_width="60dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_starred_items_icon" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:text="77 items"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Score"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#0D4FA381"
                    app:cardCornerRadius="50dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#2AFFFFFF"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/scores_on_Exams_items"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_trophy_on_score_icon" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:text="50 / 157"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Loved"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#0D4FA381"
                    app:cardCornerRadius="50dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#2AFFFFFF"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/StarredOItems"

                            android:layout_width="60dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_favourites_items_icon" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:text="130 items"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/forReading_Item"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#FCFFFFFF"
                    app:cardCornerRadius="250dp">

                    <LinearLayout
                        android:id="@+id/Frist_menu_option"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/transparent"
                        android:elevation="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#0D4FA381"
                            app:cardCornerRadius="50dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="#2AFFFFFF"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/accountImage1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_account_for_profile" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical|bottom"
                                android:paddingStart="15dp"
                                android:text="Lore Impsum Tittle"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:paddingStart="15dp"
                                android:text="Tottal : 250 items "
                                android:textColor="#472E9F"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/forQuestionandAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#FCFFFFFF"
                    app:cardCornerRadius="250dp">

                    <LinearLayout
                        android:id="@+id/Second_menu_option"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/transparent"
                        android:elevation="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#0D4FA381"
                            app:cardCornerRadius="50dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="#2AFFFFFF"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/accountImage2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_account_for_profile" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical|bottom"
                                android:paddingStart="15dp"
                                android:text="Lore Impsum Tittle"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:paddingStart="15dp"
                                android:text="Tottal : 250 items "
                                android:textColor="#5F40CD"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#FCFFFFFF"
                    app:cardCornerRadius="250dp">

                    <LinearLayout
                        android:id="@+id/Third_menu_option"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/transparent"
                        android:elevation="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#0D4FA381"
                            app:cardCornerRadius="50dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="#2AFFFFFF"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/accountImage3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_account_for_profile" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical|bottom"
                                android:paddingStart="15dp"
                                android:text="Lore Impsum Tittle"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:fontFamily="serif"
                                android:gravity="center_vertical"
                                android:paddingStart="15dp"
                                android:text="Tottal : 250 items "
                                android:textColor="#4E35A8"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"/>

                
                

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>